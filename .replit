modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend"

[[workflows.workflow]]
name = "frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36715
externalPort = 3000

[[ports]]
localPort = 45967
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && npm run start:prod & sleep 5 && cd ../frontend && npx serve -s build -l 5000"]
build = ["bash", "-c", "cd backend && npm install && npm run build && cd ../frontend && npm install && REACT_APP_API_URL='' npm run build"]
